<header class="py-6 w-full">
  <div class="flex justify-between items-center gap-4">
    <div class="flex items-center min-w-0">
      {% if metadata.author.photo %}
      <a href="/" class="mr-3 shrink-0" aria-label="{{ metadata.title }} home">
        <img src="{{ metadata.author.photo }}" alt="{{ metadata.title }}" class="w-10 h-10 rounded-full" width="40" height="40" loading="lazy" decoding="async">
      </a>
      {% endif %}
      <a href="/" class="font-semibold text-lg mr-4 truncate">{{ metadata.title }}</a>
      <div class="hidden md:flex space-x-4">
        {% if metadata.author.email %}
        <a href="mailto:{{ metadata.author.email }}" class="text-gray-400 hover:text-gray-600 focus-visible:outline-blue-600" target="_blank" rel="noopener noreferrer" aria-label="Email">
          <span class="sr-only">Email</span>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
        </a>
        {% endif %}
        {% if metadata.author.x %}
        <a href="{{ metadata.author.x }}" class="text-gray-400 hover:text-gray-600 focus-visible:outline-blue-600" target="_blank" rel="noopener noreferrer" aria-label="X">
          <span class="sr-only">X (formerly Twitter)</span>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" /></svg>
        </a>
        {% endif %}
        {% if metadata.author.github %}
        <a href="{{ metadata.author.github }}" class="text-gray-400 hover:text-gray-600 focus-visible:outline-blue-600" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <span class="sr-only">GitHub</span>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22" /></svg>
        </a>
        {% endif %}
      </div>
    </div>

    <div class="relative" x-data="{ open: false }" @keydown.escape.window="open = false">
      <button @click="open = !open" :aria-expanded="open" aria-controls="site-menu" class="text-gray-500 hover:text-gray-900 focus-visible:outline-blue-600" aria-label="Open menu">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
      </button>
      <nav id="site-menu" x-show="open" x-cloak @click.outside="open = false" x-transition class="absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5 z-20">
        <a href="/" {% if page.url == '/' %}aria-current="page"{% endif %} class="block px-4 py-2 text-base {% if page.url == '/' %}text-blue-700 font-semibold bg-blue-50{% else %}text-gray-700 hover:bg-gray-100{% endif %}">Home</a>
        <a href="/about" {% if page.url == '/about/' %}aria-current="page"{% endif %} class="block px-4 py-2 text-base {% if page.url == '/about/' %}text-blue-700 font-semibold bg-blue-50{% else %}text-gray-700 hover:bg-gray-100{% endif %}">About</a>
        <a href="/blog" {% if page.url == '/blog/' %}aria-current="page"{% endif %} class="block px-4 py-2 text-base {% if page.url == '/blog/' %}text-blue-700 font-semibold bg-blue-50{% else %}text-gray-700 hover:bg-gray-100{% endif %}">Blog</a>
        <a href="/tags" {% if page.url == '/tags/' %}aria-current="page"{% endif %} class="block px-4 py-2 text-base {% if page.url == '/tags/' %}text-blue-700 font-semibold bg-blue-50{% else %}text-gray-700 hover:bg-gray-100{% endif %}">Tags</a>
        <a href="/search" {% if page.url == '/search/' %}aria-current="page"{% endif %} class="block px-4 py-2 text-base {% if page.url == '/search/' %}text-blue-700 font-semibold bg-blue-50{% else %}text-gray-700 hover:bg-gray-100{% endif %}">Search</a>
        <a href="/feed.xml" class="block px-4 py-2 text-base text-gray-700 hover:bg-gray-100">RSS</a>
        <a href="https://github.com/deepakness/crispwrite" class="block px-4 py-2 text-base text-gray-700 hover:bg-gray-100" target="_blank" rel="noopener noreferrer">GitHub â†—</a>
      </nav>
    </div>
  </div>
</header>
